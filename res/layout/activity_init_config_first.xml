<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView 
        android:text="1.欢迎使用手机防盗"
        style="@style/TitleStyle"
        />
    
    <TextView 
        android:text="你的手机防盗卫士"
        style="@style/ContentStyle"
        />
    
    <TextView 
        android:text="SIM卡变更报警"
        style="@style/ContentStyle"
        android:drawableLeft="@drawable/star_on"
        />
    
    <TextView 
        android:text="GPS追踪"
        style="@style/ContentStyle"
        android:drawableLeft="@drawable/star_on"
        />
    
    <TextView 
        android:text="远程数据销毁"
        style="@style/ContentStyle"
        android:drawableLeft="@drawable/star_on"
        />
    
    <TextView 
        android:text="远程锁屏"
        style="@style/ContentStyle"
        android:drawableLeft="@drawable/star_on"
        />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        >
        
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/presence_online"
            />
        
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/presence_invisible"
            />
        
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/presence_invisible"
            />
        
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/presence_invisible"
            />
        
    </LinearLayout>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/anti_thief_lock"
            />
            
        <Button 
            android:onClick="nextConfig"
            android:text="下一步"
            style="@style/NextButtonStyle"
            />
        
    </RelativeLayout>

</LinearLayout>
