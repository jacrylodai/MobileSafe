<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        style="@style/TitleStyle"
        android:text="手机防盗" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        >

        <TextView
            style="@style/ContentStyle"
            android:layout_alignParentLeft="true"
            android:text="安全号码" />

        <TextView
            style="@style/ContentStyle"
            android:layout_alignParentRight="true"
            android:text="13983568844" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:src="@drawable/listview_divider" 
        android:scaleType="fitXY"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        >

        <TextView
            style="@style/ContentStyle"
            android:layout_alignParentLeft="true"
            android:text="防盗保护是否开启" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:src="@drawable/lock"
            android:scaleType="centerInside"
            />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:src="@drawable/listview_divider" 
        android:scaleType="fitXY"
        />
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        >

        <TextView
            android:id="@+id/tv_lost_find_reconfig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"   
            android:clickable="true"
            android:onClick="reconfig"
            android:background="@drawable/ui_light_green"
            android:text="重新进入设置向导" 
            android:textSize="16sp"
            android:padding="8dp"
            />

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:src="@drawable/listview_divider" 
        android:scaleType="fitXY"
        />
    
    <TextView 
        android:text="功能简介"
        android:layout_width="match_parent"
        android:padding="4dp"
        style="@style/ContentStyle"
        android:background="#ADADAD"
        />
        
    <TextView 
        android:text="GPS追踪：#*location*#"
        style="@style/ContentStyle"
        android:drawableLeft="@drawable/star_on"
        />
    
    <TextView 
        android:text="播放报警音乐：#*alarm*#"
        style="@style/ContentStyle"
        android:drawableLeft="@drawable/star_on"
        />
    
    <TextView 
        android:text="远程删除数据：#*wipedata*#"
        style="@style/ContentStyle"
        android:drawableLeft="@drawable/star_on"
        />
    
    <TextView 
        android:text="远程锁屏：#*lockscreen*#"
        style="@style/ContentStyle"
        android:drawableLeft="@drawable/star_on"
        />
    
</LinearLayout>